{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
